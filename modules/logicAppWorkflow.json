{
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "slackWebhookUrl": {
        "type": "String"
      }
    },
    "triggers": {
      "Recurrence": {
        "type": "Recurrence",
        "recurrence": {
          "frequency": "Minute",
          "interval": 5
        }
      }
    },
    "actions": {
      "SendAlertToSlack": {
        "type": "Http",
        "inputs": {
          "method": "POST",
          "uri": "@{parameters('slackWebhookUrl')}",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "text": "Alert: A custom alert has been triggered!"
          }
        }
      }
    },
    "outputs": {}
  }
  